{
  "extends": "./tsconfig.base.json",
  "exclude": [
    "node_modules/**"
  ],
  "include": ["src"],
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types",
      "node",
      "types"
    ],
    "rootDirs": ["test", "src"],
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@elementary-lab/logger": ["src/*"],
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    }
  }
}
